@using R2ETien.MVC.Enum
@model R2ETien.MVC.Entities.Person

@{
    ViewData["Title"] = "Edit Member";
}

<h2>Edit Member</h2>

<form method="post" asp-controller="Rookies" asp-action="EditMember"  >
    <input type="hidden" asp-for="Id" /> 

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="BirthPlace">Birth Place</label>
        <input asp-for="BirthPlace" class="form-control" required />
        </select>
    </div>

    <div class="form-group">
        <label asp-for="IsGraduated"></label>
        <input asp-for="IsGraduated" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary">Update Member</button>
    <a asp-action="Members" class="btn btn-secondary">Back to List</a>
</form>